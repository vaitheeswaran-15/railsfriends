<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
   
    <%= form.text_field :first_name  , class:"form-control", placeholder:"John" %>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :last_name, class:"form-control",  placeholder:"Doe"%>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :email, class:"form-control", placeholder:"xyz@gmail.com"%>
  </div>

  <div class="field form-group">
   
    <%= form.text_field :phone, class:"form-control", placeholder:"111-222-8888"%>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :instagram,  class:"form-control",  placeholder:"@johndoe12"%>
  </div>


  <div class="field form-group">
    <%= form.number_field :user_id,id: :firend_user_id,class:"form-control", value: current_user.id,type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
